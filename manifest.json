{
  "manifest_version": 3,
  "name": "OLX.ba Dark tema",
  "version": "1.0.1",
  "description": "Uživajte u ugodnijem pretraživanju oglasa uz modernu Dark temu za olx.ba. Odmarajte oči dok trgujete!",
  "author": "Zlatan Goralija",
  "browser_specific_settings": {
    "gecko": {
      "id": "olx-dark-mode@zlatangoralija.com",
      "strict_min_version": "140.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "OLX.ba Dark tema"
  },
  "icons": {
    "16": "src/assets/icons/icon16.png",
    "32": "src/assets/icons/icon32.png",
    "48": "src/assets/icons/icon48.png",
    "128": "src/assets/icons/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.olx.ba/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://olx.ba/*",
        "https://www.olx.ba/*"
      ],
      "js": ["src/scripts/content.js"],
      "run_at": "document_start"
    }
  ]
}